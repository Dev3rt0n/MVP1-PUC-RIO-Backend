{
    "swagger": "2.0",
    "info": {
        "title": "API CorpTeams",
        "version": "1.0.0"
    },
    "paths": {
        "/funcionarios": {
            "post": {
                "summary": "Cria um novo funcionário",
                "description": "Cria um novo funcionário com os dados fornecidos.",
                "parameters": [
                    {
                        "name": "funcionario",
                        "in": "body",
                        "description": "Dados do funcionário a ser criado",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "departamento": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "nome": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "email": {
                                    "type": "string",
                                    "format": "email"
                                },
                                "id": {
                                    "type": "integer"
                                },
                                "nome": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Funcionário criado com sucesso"
                    },
                    "400": {
                        "description": "Requisição inválida"
                    }
                }
            },
            "get": {
                "summary": "Obtém a lista de funcionários",
                "description": "Retorna a lista de todos os funcionários cadastrados.",
                "responses": {
                    "200": {
                        "description": "Lista de funcionários obtida com sucesso",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "departamento": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "nome": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "id": {
                                        "type": "integer"
                                    },
                                    "nome": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Atualiza um funcionário existente",
                "description": "Atualiza os dados de um funcionário existente com base no ID fornecido.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do funcionário a ser atualizado",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "funcionario",
                        "in": "body",
                        "description": "Novos dados do funcionário",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "departamento": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "nome": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "email": {
                                    "type": "string",
                                    "format": "email"
                                },
                                "nome": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Funcionário atualizado com sucesso"
                    },
                    "400": {
                        "description": "Requisição inválida"
                    }
                }
            },
            "delete": {
                "summary": "Remove um funcionário existente",
                "description": "Remove um funcionário com base no ID fornecido.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do funcionário a ser removido",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Funcionário removido com sucesso"
                    },
                    "400": {
                        "description": "Requisição inválida"
                    }
                }
            }
        },
        "/departamentos": {
            "get": {
                "summary": "Lista todos os departamentos",
                "description": "Retorna uma lista de departamentos com funcionários",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Uma lista de departamentos",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Departamento"
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Cria um novo departamento",
                "description": "Recebe um JSON com o nome do departamento e uma lista de IDs de funcionários",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Objeto de departamento para adicionar",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/NovoDepartamento"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Departamento criado"
                    }
                }
            }
        },
        "/departamentos/{id}": {
            "get": {
                "summary": "Retorna um departamento pelo ID",
                "description": "Retorna um único departamento com seus funcionários pelo ID",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Um departamento",
                        "schema": {
                            "$ref": "#/definitions/Departamento"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deleta um departamento pelo ID",
                "description": "Deleta um departamento pelo ID fornecido",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Departamento deletado"
                    }
                }
            }
        }
    },
    "definitions": {
        "Departamento": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "nome": {
                    "type": "string"
                },
                "funcionarios": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Funcionario"
                    }
                }
            }
        },
        "Funcionario": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "nome": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            }
        },
        "NovoDepartamento": {
            "type": "object",
            "required": [
                "nome",
                "list_func"
            ],
            "properties": {
                "nome": {
                    "type": "string"
                },
                "list_func": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}